# ==================================================
# Meeting Intelligence - Environment Variables
# ==================================================
# Copy this file to .env.local and fill in your values

# --------------------------------------------------
# App Configuration
# --------------------------------------------------
NEXT_PUBLIC_BASE_URL="https://meeting-intelligence-beryl.vercel.app"
NODE_ENV="development"

# --------------------------------------------------
# Database (Neon Postgres)
# Get from: https://console.neon.tech
# --------------------------------------------------
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# --------------------------------------------------
# JWT Keys for OAuth Provider
# Generate with: npm run auth:generate-keys
# --------------------------------------------------
JWT_KEY_ID="meeting-intel-key-1"
JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"

# --------------------------------------------------
# Social Login - Google
# Create at: https://console.cloud.google.com/apis/credentials
# Redirect URI: {BASE_URL}/oauth/callback/google
# --------------------------------------------------
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# --------------------------------------------------
# Social Login - Microsoft
# Create at: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
# Redirect URI: {BASE_URL}/oauth/callback/microsoft
# --------------------------------------------------
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""

# --------------------------------------------------
# Zoom Integration
# Create at: https://marketplace.zoom.us/develop/create
# App Type: User-managed OAuth
# Redirect URI: {BASE_URL}/api/auth/zoom/callback
# 
# Required Scopes (add in Zoom Marketplace → App → Scopes):
#   - user:read:user (to verify user identity)
#   - meeting:read:list_meetings (to list user's meetings) 
#   - meeting:read:meeting (to get meeting details)
#   - cloud_recording:read:list_user_recordings (for recordings)
#   - cloud_recording:read:recording (for transcripts)
# --------------------------------------------------
ZOOM_CLIENT_ID=""
ZOOM_CLIENT_SECRET=""

# --------------------------------------------------
# Asana Integration
# Create at: https://app.asana.com/0/my-apps
# Redirect URI: {BASE_URL}/api/auth/asana/callback
# --------------------------------------------------
ASANA_CLIENT_ID=""
ASANA_CLIENT_SECRET=""

# --------------------------------------------------
# Optional: OpenAI API (for summarization)
# --------------------------------------------------
OPENAI_API_KEY=""

